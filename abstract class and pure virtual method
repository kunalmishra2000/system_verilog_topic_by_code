//abstract class
virtual class base;
  int a;
  function new();
    a=7;
  endfunction
  
  pure virtual function int  display();
    endclass
    
    class child extends base;
     // base b1;
      int b,c;
      function new();
       // b1=new();
       // b1.a=9;
        a=9;
        b=99;
        c=999;
      endfunction

      
      function int display();
        $display("a=%0d b=%0d, c=%0d", a,b,c);
      endfunction
    endclass
    module tab;
      child c1=new();
      initial begin
        c1.display();
      end
    endmodule 
      
      
      
      
      
      
